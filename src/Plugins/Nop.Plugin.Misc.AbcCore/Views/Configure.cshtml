@model ConfigurationModel

@using Nop.Plugin.Misc.AbcCore.Models

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="AbcCore" asp-action="Configure" method="post">
	<section class="content">
		<div class="container-fluid">			
				<div class="card card-default">
					<div class="card-body">
                        <div class="form-group row">
							<div class="col-md-3">
								<nop-label asp-for="AreExternalCallsSkipped" />
							</div>
							<div class="col-md-9">
								<nop-editor asp-for="AreExternalCallsSkipped" />
								<span asp-validation-for="AreExternalCallsSkipped"></span>
							</div>
						</div>
                        <div class="form-group row">
							<div class="col-md-3">
								<nop-label asp-for="IsDebugMode" />
							</div>
							<div class="col-md-9">
								<nop-editor asp-for="IsDebugMode" />
								<span asp-validation-for="IsDebugMode"></span>
							</div>
						</div>
                        <div class="form-group row">
							<div class="col-md-3">
								<nop-label asp-for="MobilePhoneNumber" />
							</div>
							<div class="col-md-9">
								<nop-editor asp-for="MobilePhoneNumber" />
								<span asp-validation-for="MobilePhoneNumber"></span>
							</div>
						</div>
						<div class="form-group row">
							<div class="col-md-3">
								<nop-label asp-for="GoogleMapsGeocodingAPIKey" />
							</div>
							<div class="col-md-9">
								<nop-editor asp-for="GoogleMapsGeocodingAPIKey" />
								<span asp-validation-for="GoogleMapsGeocodingAPIKey"></span>
                            </div>
						</div>
						<div class="form-group row">
							<div class="col-md-3">
								<nop-label asp-for="IsFedExMode" />
							</div>
							<div class="col-md-9">
								<nop-editor asp-for="IsFedExMode" />
								<span asp-validation-for="IsFedExMode"></span>
							</div>
						</div>
						<div class="form-group row">
							<div class="col-md-3">
								<nop-label asp-for="StagingDbConnectionString" />
							</div>
							<div class="col-md-9">
								<nop-editor asp-for="StagingDbConnectionString" />
								<span asp-validation-for="StagingDbConnectionString"></span>
							</div>
						</div>
						<div class="form-group row">
                            <div class="col-md-9 offset-md-3">
                                <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                            </div>
						</div>
					</div>
				</div>			
		</div>
	</section>
</form>