@using Nop.Core
@using Nop.Core.Domain.Catalog

@inject CatalogSettings catalogSettings
@inject IWorkContext workContext
@* ABC: custom *@
@inject INopHtmlHelper NopHtml

@{
    @* ABC: custom, putting these on top overrides everything below *@
    // Only needed for warranty selector, won't be needed after slideout
    NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/abc/checkout-warranty-selection.css");

    NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/abc/custom_front_product.css");
    NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/abc/mobile-categories.css");
    NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/abc/pavilion-styles.css");
    NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/abc/mobile-header.css");

    // Could be add this to _ProductBox.cshtml?
    NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/abc/product-box.css");

    // Can exist in ProductTemplate.Simple.cshtml
    NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/abc/product-details-template.css");
    
    // After promo categories are made, this only needs to be in CategoryTemplate.ProductsInGridOrLines.cshtml
    NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/abc/product-listings.css");

    // _ProductPrice and OrderSummary/Default.cshtml?
    NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/abc/product-price.css");

    // Only needed for TopicDetails.cshtml
    NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/abc/rebates-promos.css");

    // Only needed for _ProductPrice
    NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/abc/tooltip.css");

    // ProductTemplate.Simple.cshtml
    <script src="~/Themes/Pavilion/Content/scripts/abc/mattress.js" asp-location="Footer"></script>
    // CategoryTemplate, Promo Listing (to become just category template)
    <script src="~/Themes/Pavilion/Content/scripts/abc/mobileFilters.js" asp-location="Footer"></script>
    <script src="~/Themes/Pavilion/Content/scripts/abc/mobileMenu.js" asp-location="Footer"></script>

    @* ABC: base functionality is below *@
    var supportRtl = (await workContext.GetWorkingLanguageAsync()).Rtl;

    if (supportRtl)
    {
        NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/1280.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/1024.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/768.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/480.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/mobile.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/styles.rtl.css");
    }
    else
    {
        NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/1280.css");
        NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/1024.css");
        NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/768.css");
        NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/480.css");
        NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/mobile.css");
        NopHtml.AppendCssFileParts("~/Themes/Pavilion/Content/css/styles.css");
    }

    if (catalogSettings.DisplayAllPicturesOnCatalogPages)
    {
        NopHtml.AppendCssFileParts("~/lib_npm/swiper/swiper-bundle.min.css");
    }

    NopHtml.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/perfect-scrollbar.min.css");

    <script src="~/Plugins/SevenSpikes.Core/Scripts/footable.min.js" asp-location="Footer"></script>
    <script src="~/Plugins/SevenSpikes.Core/Scripts/perfect-scrollbar.min.js" asp-location="Footer"></script>
    <script src="~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.core.min.js" asp-location="Footer"></script>
    <script src="~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.theme.ex.min.js" asp-location="Footer"></script>

    <script src="~/Themes/Pavilion/Content/scripts/pavilion.js" asp-location="Footer"></script>
}