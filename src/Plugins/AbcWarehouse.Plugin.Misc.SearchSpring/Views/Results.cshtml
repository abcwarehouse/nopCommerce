@model AbcWarehouse.Plugin.Misc.SearchSpring.Models.SearchResultModel

<h2>Search Results</h2>

@if (!Model.Results.Any())
{
    <p>No products found.</p>
}
else
{
    <div class="product-grid">
        @foreach (var product in Model.Results)
        {
            <div class="product-item">
                <a href="@product.ProductUrl">
                    <img src="@product.ImageUrl" alt="@product.Name" />
                    <p>@product.Name</p>
                    <p>Price: @product.Price</p>
                </a>
            </div>
        }
    </div>

    <div class="pagination">
        Page @Model.PageNumber of @Model.TotalPages

        @if (Model.PageNumber > 1)
        {
            <a href="?q=@Request.Query["q"]&page=@(Model.PageNumber - 1)">Previous</a>
        }
        @if (Model.PageNumber < Model.TotalPages)
        {
            <a href="?q=@Request.Query["q"]&page=@(Model.PageNumber + 1)">Next</a>
        }
    </div>
}
