@model Nop.Plugin.Widgets.MickeySalePromo.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="MickeySalePromo" asp-action="Configure" method="post" id="mickey-config-form" enctype="multipart/form-data">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Banner Configuration</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Top Banner Desktop Image</label>
                    </div>
                    <div class="col-md-9">
                        @if (!string.IsNullOrEmpty(Model.TopBannerDesktopUrl))
                        {
                            <div style="margin-bottom: 10px;">
                                <strong>Current Image:</strong><br />
                                <img src="@Model.TopBannerDesktopUrl" alt="Top Banner Desktop" style="max-width: 300px; max-height: 150px; border: 1px solid #ddd; padding: 5px;" />
                                <br />
                                <small class="text-muted">@Model.TopBannerDesktopUrl</small>
                                <br />
                                <button type="button" class="btn btn-danger btn-sm" style="margin-top: 5px;" onclick="removeBanner('TopBannerDesktop')">
                                    <i class="fa fa-trash"></i> Remove Image
                                </button>
                            </div>
                        }
                        <input type="file" name="TopBannerDesktopUpload" class="form-control" accept="image/*" />
                        <span class="text-muted">Upload a new image to replace the current one</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Top Banner Mobile Image</label>
                    </div>
                    <div class="col-md-9">
                        @if (!string.IsNullOrEmpty(Model.TopBannerMobileUrl))
                        {
                            <div style="margin-bottom: 10px;">
                                <strong>Current Image:</strong><br />
                                <img src="@Model.TopBannerMobileUrl" alt="Top Banner Mobile" style="max-width: 300px; max-height: 150px; border: 1px solid #ddd; padding: 5px;" />
                                <br />
                                <small class="text-muted">@Model.TopBannerMobileUrl</small>
                                <br />
                                <button type="button" class="btn btn-danger btn-sm" style="margin-top: 5px;" onclick="removeBanner('TopBannerMobile')">
                                    <i class="fa fa-trash"></i> Remove Image
                                </button>
                            </div>
                        }
                        <input type="file" name="TopBannerMobileUpload" class="form-control" accept="image/*" />
                        <span class="text-muted">Upload a new image to replace the current one</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Left Feature Banner Image</label>
                    </div>
                    <div class="col-md-9">
                        @if (!string.IsNullOrEmpty(Model.LeftBannerUrl))
                        {
                            <div style="margin-bottom: 10px;">
                                <strong>Current Image:</strong><br />
                                <img src="@Model.LeftBannerUrl" alt="Left Banner" style="max-width: 300px; max-height: 150px; border: 1px solid #ddd; padding: 5px;" />
                                <br />
                                <small class="text-muted">@Model.LeftBannerUrl</small>
                                <br />
                                <button type="button" class="btn btn-danger btn-sm" style="margin-top: 5px;" onclick="removeBanner('LeftBanner')">
                                    <i class="fa fa-trash"></i> Remove Image
                                </button>
                            </div>
                        }
                        <input type="file" name="LeftBannerUpload" class="form-control" accept="image/*" />
                        <span class="text-muted">Upload a new image to replace the current one</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Right Feature Banner Image</label>
                    </div>
                    <div class="col-md-9">
                        @if (!string.IsNullOrEmpty(Model.RightBannerUrl))
                        {
                            <div style="margin-bottom: 10px;">
                                <strong>Current Image:</strong><br />
                                <img src="@Model.RightBannerUrl" alt="Right Banner" style="max-width: 300px; max-height: 150px; border: 1px solid #ddd; padding: 5px;" />
                                <br />
                                <small class="text-muted">@Model.RightBannerUrl</small>
                                <br />
                                <button type="button" class="btn btn-danger btn-sm" style="margin-top: 5px;" onclick="removeBanner('RightBanner')">
                                    <i class="fa fa-trash"></i> Remove Image
                                </button>
                            </div>
                        }
                        <input type="file" name="RightBannerUpload" class="form-control" accept="image/*" />
                        <span class="text-muted">Upload a new image to replace the current one</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Widget Zone (Where to Display)</label>
                    </div>
                    <div class="col-md-9">
                        <select name="WidgetZone" class="form-control">
                            <option value="">-- Select Widget Zone --</option>
                            @foreach (var zone in Model.AvailableWidgetZones)
                            {
                                <option value="@zone.Value" selected="@(Model.WidgetZone == zone.Value)">@zone.Text</option>
                            }
                        </select>
                        <span class="text-muted">Choose where all sale products will be displayed on the site</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Sale Products</h3>
            </div>
            <div class="panel-body">
                <div id="products-container">
                    @for (int i = 0; i < Model.Products.Count; i++)
                    {
                        <div class="product-item" data-index="@i" style="border: 1px solid #ddd; padding: 15px; margin-bottom: 15px; position: relative;">
                            <button type="button" class="btn btn-danger btn-sm remove-product" style="position: absolute; top: 10px; right: 10px;">
                                <i class="fa fa-trash"></i> Remove
                            </button>
                            <h4>Product #@(i + 1)</h4>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Item Number</label>
                                        <input type="text" name="Products[@i].ItemNumber" value="@Model.Products[i].ItemNumber" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Product ID (for Add to Cart)</label>
                                        <input type="number" name="Products[@i].ProductId" value="@Model.Products[i].ProductId" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Brand Name</label>
                                        <input type="text" name="Products[@i].BrandName" value="@Model.Products[i].BrandName" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>SKU</label>
                                        <input type="text" name="Products[@i].Sku" value="@Model.Products[i].Sku" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Product URL</label>
                                <input type="text" name="Products[@i].ProductUrl" value="@Model.Products[i].ProductUrl" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>Image URL</label>
                                <input type="text" name="Products[@i].ImageUrl" value="@Model.Products[i].ImageUrl" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>Banner Text (Ribbon)</label>
                                <input type="text" name="Products[@i].Banner" value="@Model.Products[i].Banner" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>Description</label>
                                <textarea name="Products[@i].Description" class="form-control" rows="2">@Model.Products[i].Description</textarea>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Old Price</label>
                                        <input type="text" name="Products[@i].OldPrice" value="@Model.Products[i].OldPrice" class="form-control" placeholder="Compare at $139.95" />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>You Save</label>
                                        <input type="text" name="Products[@i].YouSave" value="@Model.Products[i].YouSave" class="form-control" placeholder="Save $40" />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Actual Price</label>
                                        <input type="text" name="Products[@i].ActualPrice" value="@Model.Products[i].ActualPrice" class="form-control" placeholder="$99.95" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="form-check">
                                    <input type="checkbox" name="Products[@i].ShowDisclaimer" value="true" @(Model.Products[i].ShowDisclaimer ? "checked" : "") class="form-check-input disclaimer-checkbox" id="disclaimer-@i" data-index="@i" />
                                    <label class="form-check-label" for="disclaimer-@i">
                                        Show Disclaimer: "Vehicles with factory security systems may require additional interface"
                                    </label>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <button type="button" id="add-product" class="btn btn-success">
                    <i class="fa fa-plus"></i> Add Product
                </button>
            </div>
        </div>
    </div>

    <div class="content-footer clearfix">
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>
</form>

<script>
    $(document).ready(function() {
        var productIndex = @Model.Products.Count;

        $('#add-product').click(function() {
            var html = `
                <div class="product-item" data-index="${productIndex}" style="border: 1px solid #ddd; padding: 15px; margin-bottom: 15px; position: relative;">
                    <button type="button" class="btn btn-danger btn-sm remove-product" style="position: absolute; top: 10px; right: 10px;">
                        <i class="fa fa-trash"></i> Remove
                    </button>
                    <h4>Product #${productIndex + 1}</h4>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Item Number</label>
                                <input type="text" name="Products[${productIndex}].ItemNumber" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Product ID (for Add to Cart)</label>
                                <input type="number" name="Products[${productIndex}].ProductId" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Brand Name</label>
                                <input type="text" name="Products[${productIndex}].BrandName" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>SKU</label>
                                <input type="text" name="Products[${productIndex}].Sku" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Product URL</label>
                        <input type="text" name="Products[${productIndex}].ProductUrl" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Image URL</label>
                        <input type="text" name="Products[${productIndex}].ImageUrl" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Banner Text (Ribbon)</label>
                        <input type="text" name="Products[${productIndex}].Banner" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Description</label>
                        <textarea name="Products[${productIndex}].Description" class="form-control" rows="2"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Old Price</label>
                                <input type="text" name="Products[${productIndex}].OldPrice" class="form-control" placeholder="Compare at $139.95" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>You Save</label>
                                <input type="text" name="Products[${productIndex}].YouSave" class="form-control" placeholder="Save $40" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Actual Price</label>
                                <input type="text" name="Products[${productIndex}].ActualPrice" class="form-control" placeholder="$99.95" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            <input type="checkbox" name="Products[${productIndex}].ShowDisclaimer" value="true" class="form-check-input disclaimer-checkbox" id="disclaimer-${productIndex}" data-index="${productIndex}" />
                            <label class="form-check-label" for="disclaimer-${productIndex}">
                                Show Disclaimer: "Vehicles with factory security systems may require additional interface"
                            </label>
                        </div>
                    </div>
                </div>
            `;

            $('#products-container').append(html);
            productIndex++;
        });

        $(document).on('click', '.remove-product', function() {
            $(this).closest('.product-item').remove();
        });

        // Handle checkbox submission - ensure unchecked boxes post false
        $('#mickey-config-form').on('submit', function() {
            // Remove any previously added hidden disclaimer inputs
            $('.disclaimer-hidden-field').remove();

            // For each checkbox, if it's NOT checked, add a hidden input with false value
            $('.disclaimer-checkbox').each(function() {
                if (!$(this).is(':checked')) {
                    var index = $(this).data('index');
                    $('<input>')
                        .attr('type', 'hidden')
                        .attr('name', 'Products[' + index + '].ShowDisclaimer')
                        .attr('class', 'disclaimer-hidden-field')
                        .val('false')
                        .appendTo('#mickey-config-form');
                }
            });
        });

        // Function to remove banner images
        window.removeBanner = function(bannerType) {
            if (confirm('Are you sure you want to remove this banner image?')) {
                // Submit a form to remove the banner
                var form = $('<form>', {
                    'method': 'POST',
                    'action': '@Url.Action("RemoveBanner", "MickeySalePromo")'
                });

                var input = $('<input>', {
                    'type': 'hidden',
                    'name': 'bannerType',
                    'value': bannerType
                });

                form.append(input);
                form.append('@Html.AntiForgeryToken()');
                $('body').append(form);
                form.submit();
            }
        };
    });
</script>
