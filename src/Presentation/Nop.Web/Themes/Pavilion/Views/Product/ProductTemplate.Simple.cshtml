@{
    var bvProductUrl = $"{HttpContextAccessor.HttpContext.Request.Scheme}://{HttpContextAccessor.HttpContext.Request.Host}{Url.RouteUrl("Product", new { SeName = Model.SeName })}";
    var productImageUrl = Model.DefaultPictureModel?.ImageUrl;
}
@{
    string offerPrice = null;

    if (Model?.ProductPrice != null)
    {
        offerPrice = Model.ProductPrice.PriceValue.ToString();
    }

    var schema = new Dictionary<string, object>
    {
        ["@context"] = "https://schema.org",
        ["@type"] = "Product",
        ["@id"] = bvProductUrl,
        ["name"] = Model.Name,
        ["image"] = productImageUrl,
        ["description"] = Regex.Replace(Model.ShortDescription ?? "", "<.*?>", string.Empty),
        ["sku"] = Model.Sku,
        ["brand"] = string.Join(" ", Model.ProductManufacturers.Select(m => m.Name)),
        ["offers"] = offerPrice != null
            ? new Dictionary<string, object>
                {
                    ["@type"] = "Offer",
                    ["priceCurrency"] = "USD",
                    ["price"] = offerPrice
                }
            : null
    };

    // Remove null-valued keys (like "offers" if offerPrice is null)
    var schemaFiltered = schema
        .Where(kvp => kvp.Value != null)
        .ToDictionary(kvp => kvp.Key, kvp => kvp.Value);

    var jsonLd = JsonConvert.SerializeObject(schemaFiltered, Formatting.Indented);
}
    <script type="application/ld+json">
        @Html.Raw(jsonLd)
    </script>
    <!--BV injected code-->
    <script>
        // Make sure that BV.configure is defined before running this script
        BV.configure('global', {
            events : {
                bvRender : function (data) {
                // JavaScript code that executes when the Bazaarvoice application renders.
                }
            }
        });
    </script>
    <script>
        (function(){
            document.addEventListener("DOMContentLoaded", punt);
            if (document.readyState != "loading") punt();
            function punt(){
                var a = document.createElement("script");
                a.setAttribute("src", "https://content.adacado.com/productpixel/v1/shell.umd.js");
                a.setAttribute("data-advertiserid", "37953");
                a.setAttribute("id", "adavadael");
                a.setAttribute("data-productid", "@Model.Id");
                a.setAttribute("async", "async");
                document.body.appendChild(a);
            }
        })();
    </script>
<script>
(function() {
    // Wait for DOM and searchSpringRecs to be ready
    function initRecommendations() {
        if (typeof searchSpringRecs === 'undefined') {
            console.log('searchSpringRecs not loaded yet, retrying...');
            setTimeout(initRecommendations, 100);
            return;
        }

        console.log('Loading recommendations for SKU: @Model.Sku');
        
        const container = document.getElementById('product-recommendations-container');
        if (!container) {
            console.error('Container not found');
            return;
        }

        // Show loading state
        container.innerHTML = '<p style="text-align: center; padding: 20px;">Loading recommendations...</p>';

        // Fetch recommendations
        searchSpringRecs.getProductPageRecommendations('@Model.Sku')
            .then(data => {
                console.log('Recommendations received:', data);
                
                if (!data || !data.profiles || data.profiles.length === 0) {
                    container.innerHTML = '';
                    return;
                }

                // Render each profile
                let html = '<div class="searchspring-recommendations">';
                
                data.profiles.forEach(profile => {
                    if (!profile.results || profile.results.length === 0) {
                        return;
                    }

                    html += '<div class="recommendation-profile" style="margin-bottom: 50px;">';
                    
                    // Profile title
                    const title = profile.display || 'Recommended Products';
                    html += `<h2 style="font-size: 24px; margin-bottom: 20px; padding-bottom: 10px; border-bottom: 2px solid #e0e0e0;">${title}</h2>`;
                    
                    // Products carousel
                    html += '<div class="products-carousel" style="display: flex; gap: 20px; overflow-x: auto; padding: 10px 0;">';
                    
                    profile.results.forEach(product => {
                        html += `
                            <div class="recommendation-item" style="flex: 0 0 auto; width: 250px; border: 1px solid #ddd; border-radius: 5px; padding: 15px;">
                                <a href="${product.url}" style="text-decoration: none; color: inherit;">
                                    ${product.imageUrl ? `<img src="${product.imageUrl}" alt="${escapeHtml(product.name)}" style="width: 100%; height: auto; margin-bottom: 10px;">` : ''}
                                    <h3 style="font-size: 16px; margin: 10px 0; min-height: 40px;">${escapeHtml(product.name)}</h3>
                                    ${product.brand ? `<p style="color: #666; font-size: 14px; margin: 5px 0;">${escapeHtml(product.brand)}</p>` : ''}
                                    ${product.price ? `<p style="font-size: 18px; font-weight: bold; color: #446588; margin: 10px 0;">$${product.price}</p>` : ''}
                                </a>
                            </div>
                        `;
                    });
                    
                    html += '</div></div>';
                });
                
                html += '</div>';
                container.innerHTML = html;
            })
            .catch(err => {
                console.error('Error loading recommendations:', err);
                container.innerHTML = '';
            });
    }

    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // Start initialization when DOM is ready
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initRecommendations);
    } else {
        initRecommendations();
    }
})();
</script>
<script>
    searchSpringRecs.getProductPageRecommendations('@Model.Sku')
        .then(data => searchSpringRecs.renderRecommendations(data, 'product-recommendations'));
</script>
